let winners = {};

function countWin(driver) {
    if(winners.hasOwnProperty(driver)) {winners[driver]+=1; return;} //if winners has the property "driver" add one to the property and stop the function.
    winners[driver]=1;                                              //  add one to the property and stop the function
    }                                                               //  if not just create a property named - "driver" and set it to 1


formula1Champions.forEach(countWin);
